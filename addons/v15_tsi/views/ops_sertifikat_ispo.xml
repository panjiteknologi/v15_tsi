<odoo>
    <data>

        <!-- ops.sertifikat form view -->
        <record id="ops_sertifikat_ispo_view_form" model="ir.ui.view">
            <field name="name">ops.sertifikat.ispo.view.form</field>
            <field name="model">ops.sertifikat.ispo</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="set_to_confirm" states="new" string="Confirm" type="object" class="oe_highlight" />
                        <button name="set_to_done" states="confirm" string="Done" type="object" class="oe_highlight"/>
                        <button name="set_to_draft" states="confirm,done" string="Reset" type="object" />
                        <field name="state" widget="statusbar" statusbar_visible="new,confirm,done"/>
                    </header>                
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group col="4">
                            <field name="nomor_sertifikat"/>
                            <field name="ispo_reference"/>
                            <field name="nama_customer"/>
                            <field name="scope"/>
                            <field name="head_office"/>
                            <field name="akre_tes"/>
                            <field name="site_office"/>
                            <field name="tahun"/>
                            <field name="luasan_area" />
                            <field name="rantai_pasok" />
                            <field name="initial_date"/>
                            <field name="validity_date"/>
                            <field name="upload_sertifikat" filename="file_name2"/>
                            <field name="file_name2"   invisible="1"/>
                        </group>
                        <group col="4" string="Kebun">
                            <field name="desa_kebun" />
                            <field name="luas_kebun" />
                            <field name="lintang_kebun" />
                            <field name="bujur_kebun" />
                            <field name="produktivitas" />
                            <field name="produksi" />
                            <field name="tanaman_belum" />
                            <field name="tanaman_menghasilkan" />
                            <field name="area_tanam" />
                        </group>
                        <group col="4" string="Pabrik">
                            <field name="desa_pabrik" />
                            <field name="kapasitas" />
                            <field name="bujur_pabrik" />
                            <field name="sumber" />
                            <field name="lintang_pabrik" />
                            <field name="cpo" />
                            <field name="kapasitas_pabrik" />
                            <field name="palm_kernel" />
                        </group>
                        <notebook>
                            <page name="certificate_kan" string="KAN" attrs="{'invisible': [('akre_tes', '!=', 11 )]}">
                                <group>
                                    <field name="sertifikat_kan" nolabel="1" widget="one2many_list">
                                        <tree editable="bottom">
                                            <field name="status_sertifikat"/>
                                            <field name="date"/>
                                            <field name="remarks"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <field name="status_sertifikat"/>
                                                <field name="date"/>
                                                <field name="remarks"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>                        
                            <page name="certificate_non" string="Non KAN" attrs="{'invisible': [('akre_tes', 'not in', [12, 13, 14, 16, 17, 18, 19])]}">
                                <group>
                                    <field name="sertifikat_non" nolabel="1" widget="one2many_list">
                                        <tree editable="bottom">
                                            <field name="status_sertifikat"/>
                                            <field name="date"/>
                                            <field name="remarks"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <field name="status_sertifikat"/>
                                                <field name="date"/>
                                                <field name="remarks"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ops.sertifikat tree view -->
        <record id="ops_sertifikat_ispo_view_tree" model="ir.ui.view">
            <field name="name">ops.sertifikat.ispo.view.tree</field>
            <field name="model">ops.sertifikat.ispo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ispo_reference"/>
                    <field name="nama_customer" string="Customer"/>
                    <field name="nomor_sertifikat"/>
                    <field name="initial_date"/>
                    <field name="validity_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- ops.sertifikat action window -->
        <record id="ops_sertifikat_ispo_action" model="ir.actions.act_window">
            <field name="name">Audit Sertifikat</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ops.sertifikat.ispo</field>
            <field name="view_mode">tree,form,pivot,graph,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <record id="ops_sertifikat_ispo_view_pivot" model="ir.ui.view">
            <field name="name">ops.sertifikat.ispo.view.pivot</field>
            <field name="model">ops.sertifikat.ispo</field>
            <field name="arch" type="xml">
                <pivot string="Pivot">
                    <!-- Add your fields here -->

                </pivot>
            </field>
        </record>

        <record id="ops_sertifikat_ispo_view_kanban" model="ir.ui.view">
            <field name="name">ops.sertifikat.ispo.view.kanban</field>
            <field name="model">ops.sertifikat.ispo</field>
            <field name="arch" type="xml">
                <pivot string="Kanban">
                    <!-- Add your fields here -->

                </pivot>
            </field>
        </record>

        <!-- tsi.iso graph view -->
        <record id="ops_sertifikat_ispo_view_graph" model="ir.ui.view">
            <field name="name">ops.sertifikat.ispo.view.graph</field>
            <field name="model">ops.sertifikat.ispo</field>
            <field name="arch" type="xml">
                <graph string="Graph Description">
                    <!-- Add your fields here -->

                </graph>
            </field>
        </record>

        <record model="ir.sequence" id="ops_sertifikat_ispo_seq">
            <field name="name">sertifikat</field>
            <field name="code">ops.sertifikat.ispo</field>
            <field name="prefix">CER</field>
            <field name="padding">7</field>
            <field name="company_id" eval="False" />
        </record>

        <record id="cetak_sertifikatispo" model="ir.actions.report">
            <field name="name">Report Sertifikat ISPO</field>
            <field name="model">ops.sertifikat.ispo</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">v15_tsi.cetak_sertifikatispo</field>
            <field name="report_file">v15_tsi.cetak_sertifikatispo</field>
            <field name="binding_model_id" ref="model_ops_sertifikat_ispo"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>