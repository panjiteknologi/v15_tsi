<odoo>
    <data>

        <!-- ops.report form view -->
        <record id="ops_report_view_form" model="ir.ui.view">
            <field name="name">ops.report.view.form</field>
            <field name="model">ops.report</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="set_to_confirm" states="new" string="Confirm" type="object" class="oe_highlight" />
                        <button name="set_to_done" states="confirm" string="Done" type="object" class="oe_highlight"/>
                        <button name="set_to_draft" states="confirm,done" string="Reset" type="object" />
                        <!-- <button name="sync_attachment_audit" string="Update Attachment" type="object" class="oe_highlight"/> -->
                        <field name="state" widget="statusbar" statusbar_visible="new,confirm,done"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="iso_reference"/>
                            <field name="plan_reference"/>
                            <field name="sales_order_id"/>
                            <field name="reference_request_ids" widget="many2many_tags"/>
                        </group>
                        <group col="4" string="Sales Related">
                            <field name="customer"/>
                            <field name="iso_standard_ids" widget="many2many_tags"/>
                            <field name="total_emp"/>
                            <field name="scope"/>
                            <field name="boundaries"/>
                            <field name="ea_code"/>
                            <field name="finding_type"/>
                            <field name="audit_stage"/>
                        </group>
                        <group col="4">
                            <field name="upload_dokumen" filename="file_name2"/>
                            <field name="dokumen_sosialisasi" filename="file_name1"/>
                            <field name="file_name1"   invisible="1"/>
                            <field name="file_name2"   invisible="1"/>
                        </group>

                        <notebook>
                            <page name="no_finding" string="No Finding" attrs="{'invisible': [('finding_type', '!=', 'no_finding')]}">
                                    <group>
                                        <field name="no_finding_lines" nolabel="1">
                                            <tree editable="bottom">
                                                <field name="audit_plan" widget="binary" filename="file_name1"/>
                                                <field name="attendance_sheet" widget="binary" filename="file_name2"/>
                                                <field name="audit_report" widget="binary" filename="file_name3"/>
                                                <field name="review_27001" widget="binary" filename="file_name4" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                                <field name="temuan"/>
                                                <field name="file_name1"   invisible="1"/>
                                                <field name="file_name2"   invisible="1"/>
                                                <field name="file_name3"   invisible="1"/>
                                                <field name="file_name4"   invisible="1" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                            </tree>
                                            <form>
                                                <group>
                                                <field name="audit_plan" widget="binary" filename="file_name1"/>
                                                <field name="attendance_sheet" widget="binary" filename="file_name2"/>
                                                <field name="audit_report" widget="binary" filename="file_name3"/>
                                                <field name="review_27001" widget="binary" filename="file_name4" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                                <field name="temuan"/>
                                                <field name="file_name1"   invisible="1"/>
                                                <field name="file_name2"   invisible="1"/>
                                                <field name="file_name3"   invisible="1"/>
                                                <field name="file_name4"   invisible="1" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                                </group>
                                            </form>
                                        </field>
                                    </group>
                            </page>
                            <page name="minor" string="Minor" attrs="{'invisible': [('finding_type', '!=', 'minor')]}">
                                    <group>
                                        <field name="minor_lines" nolabel="1">
                                            <tree editable="bottom">
                                                <field name="audit_plan" widget="binary" filename="file_name1"/>
                                                <field name="attendance_sheet" widget="binary" filename="file_name2"/>
                                                <field name="audit_report" widget="binary" filename="file_name3"/>
                                                <field name="close_findings" widget="binary" filename="file_name4"/>
                                                <field name="review_27001" widget="binary" filename="file_name5" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                                <field name="temuan"/>
                                                <field name="file_name1"   invisible="1"/>
                                                <field name="file_name2"   invisible="1"/>
                                                <field name="file_name3"   invisible="1"/>
                                                <field name="file_name4"   invisible="1"/>
                                                <field name="file_name5"   invisible="1" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                            </tree>
                                            <form>
                                                <group>
                                                <field name="audit_plan" widget="binary" filename="file_name1"/>
                                                <field name="attendance_sheet" widget="binary" filename="file_name2"/>
                                                <field name="audit_report" widget="binary" filename="file_name3"/>
                                                <field name="close_findings" widget="binary" filename="file_name4"/>
                                                <field name="review_27001" widget="binary" filename="file_name5" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                                <field name="temuan"/>
                                                <field name="file_name1"   invisible="1"/>
                                                <field name="file_name2"   invisible="1"/>
                                                <field name="file_name3"   invisible="1"/>
                                                <field name="file_name4"   invisible="1"/>
                                                <field name="file_name5"   invisible="1" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                                </group>
                                            </form>
                                        </field>
                                    </group>
                            </page>
                            <page name="major" string="Major" attrs="{'invisible': [('finding_type', '!=', 'major')]}">
                                    <group>
                                        <field name="major_lines" nolabel="1">
                                            <tree editable="bottom">
                                                <field name="audit_plan" widget="binary" filename="file_name1"/>
                                                <field name="attendance_sheet" widget="binary" filename="file_name2"/>
                                                <field name="audit_report" widget="binary" filename="file_name3"/>
                                                <field name="verification_audit" widget="binary" filename="file_name4"/>
                                                <field name="verification_attendance" widget="binary" filename="file_name5"/>
                                                <field name="verifikasi_audit" widget="binary" filename="file_name6"/>
                                                <field name="close_findings" widget="binary" filename="file_name7"/>
                                                <field name="review_27001" widget="binary" filename="file_name8" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                                <field name="temuan"/>
                                                <field name="file_name1"   invisible="1"/>
                                                <field name="file_name2"   invisible="1"/>
                                                <field name="file_name3"   invisible="1"/>
                                                <field name="file_name4"   invisible="1"/>
                                                <field name="file_name5"   invisible="1"/>
                                                <field name="file_name6"   invisible="1"/>
                                                <field name="file_name7"   invisible="1"/>
                                                <field name="file_name8"   invisible="1" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                            </tree>
                                            <form>
                                                <group>
                                                    <field name="audit_plan" widget="binary" filename="file_name1"/>
                                                    <field name="attendance_sheet" widget="binary" filename="file_name2"/>
                                                    <field name="audit_report" widget="binary" filename="file_name3"/>
                                                    <field name="verification_audit" widget="binary" filename="file_name4"/>
                                                    <field name="verification_attendance" widget="binary" filename="file_name5"/>
                                                    <field name="verifikasi_audit" widget="binary" filename="file_name6"/>
                                                    <field name="close_findings" widget="binary" filename="file_name7"/>
                                                    <field name="review_27001" widget="binary" filename="file_name8" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                                    <field name="temuan"/>
                                                    <field name="file_name1"   invisible="1"/>
                                                    <field name="file_name2"   invisible="1"/>
                                                    <field name="file_name3"   invisible="1"/>
                                                    <field name="file_name4"   invisible="1"/>
                                                    <field name="file_name5"   invisible="1"/>
                                                    <field name="file_name6"   invisible="1"/>
                                                    <field name="file_name7"   invisible="1"/>
                                                    <field name="file_name8"   invisible="1" groups="v15_tsi.group_iso_form_review_27001_20000"/>
                                                </group>
                                            </form>
                                        </field>
                                    </group>
                            </page>
                            <!-- <page name="cover" string="Cover">
                                <group>
                                    <field name="objectives" nolabel="1"/>
                                </group>
                            </page> -->
                            <page name="general" string="General Information">
                                    <group col="4">
                                        <field name="contract_number"/>
                                        <field name="audit_start"/>
                                        <field name="audit_end"/>
                                        <field name="certification_type"/>
                                        <field name="standards"/>
                                        <field name="audit_criteria"/>
                                        <field name="audit_method"/>
                                        <field name="auditor_lead"/>
                                        <field name="auditor_1"/>
                                        <field name="auditor_2"/>
                                        <field name="auditor_3"/>
                                        <field name="kan_1"/>
                                        <field name="kan_2"/>

                                    </group>
                                    <group>
                                        <field name="audit_objectives" nolabel="1"/>
                                    </group>
                            </page>
                            <!-- <page name="summary" string="Executive Summary">
                                <group>
                                    <field name="objectives" nolabel="1"/>
                                </group>
                            </page> -->
                            <page name="notes" string="Audit Notes">
                                <group>
                                    <field name="objectives" nolabel="1"/>
                                </group>
                            </page>
                            <!-- <page name="visit" string="Next Visit">
                                <group>
                                    <field name="objectives" nolabel="1"/>
                                </group>
                            </page> -->

                            <!-- <page name="objectives" string="Objectives">
                                <group>
                                    <field name="objectives" nolabel="1"/>
                                </group>
                            </page>                        
                            <page name="report_summary" string="Details">
                                <group>
                                    <field name="report_summary" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="summary"/>
                                            <field name="status"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <field name="summary"/>
                                                <field name="status"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page> -->
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ops.report tree view -->
        <record id="ops_report_view_tree" model="ir.ui.view">
            <field name="name">ops.report.view.tree</field>
            <field name="model">ops.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="customer"/>
                    <field name="iso_reference"/>
                    <field name="iso_standard_ids" widget="many2many_tags"/>
                    <field name="audit_stage"/>
                    <field name="state" widget="badge" decoration-success = "state == 'done'" decoration-info = "state == 'confirm'"/>
                </tree>
            </field>
        </record>

        <!-- ops.report action window -->
        <record id="ops_report_action" model="ir.actions.act_window">
            <field name="name">Audit report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ops.report</field>
            <field name="view_mode">tree,form,pivot,graph,kanban</field>
            <field name="domain">[('state', '!=', 'done')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <record id="ops_report_view_pivot" model="ir.ui.view">
            <field name="name">ops.report.view.pivot</field>
            <field name="model">ops.report</field>
            <field name="arch" type="xml">
                <pivot string="Pivot">
                    <!-- Add your fields here -->

                </pivot>
            </field>
        </record>

        <record id="ops_report_view_kanban" model="ir.ui.view">
            <field name="name">ops.report.view.kanban</field>
            <field name="model">ops.report</field>
            <field name="arch" type="xml">
                <pivot string="Kanban">
                    <!-- Add your fields here -->

                </pivot>
            </field>
        </record>

        <!-- tsi.iso graph view -->
        <record id="ops_report_view_graph" model="ir.ui.view">
            <field name="name">ops.report.view.graph</field>
            <field name="model">ops.report</field>
            <field name="arch" type="xml">
                <graph string="Graph Description">
                    <!-- Add your fields here -->

                </graph>
            </field>
        </record>

        <record model="ir.sequence" id="ops_report_seq">
            <field name="name">report</field>
            <field name="code">ops.report</field>
            <field name="prefix">REP</field>
            <field name="padding">7</field>
            <field name="company_id" eval="False" />
        </record>

        <record id="ops_report_view_search" model="ir.ui.view">
			<field name="name">ops.report.view.search</field>
			<field name="model">ops.report</field>
			<field name="priority" eval="15"/>
			<field name="arch" type="xml">
				<search string="Operation Report Filter">
					<!-- <field name="nama_klien"/> -->
                    <field name="name"/>
					<field name="customer"/>
				</search>
			</field>
		</record>

        <record id="audit_review_stage" model="ir.actions.report">
            <field name="name">Report Review 27001</field>
            <field name="model">ops.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">v15_tsi.audit_review_stage</field>
            <field name="report_file">v15_tsi.audit_review_stage</field>
            <field name="binding_model_id" ref="model_ops_report"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>