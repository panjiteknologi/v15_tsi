<odoo>
    <data>

        <record id="seq_pengeluaran_barang" model="ir.sequence">
            <field name="name">Pengeluaran Barang Sequence</field>
            <field name="code">tsi.pengeluaran_barang</field>
            <field name="prefix">PB</field>
            <field name="padding">5</field>
        </record>

        <record id="tsi_pengeluaran_barang_action" model="ir.actions.act_window">
            <field name="name">Pengeluaran Barang</field>
            <field name="res_model">tsi.pengeluaran_barang</field>
            <field name="view_mode">tree,form</field>
        </record>


