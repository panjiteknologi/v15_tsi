        <record id="tsi_pengeluaran_barang_view_tree" model="ir.ui.view">
            <field name="name">tsi.pengeluaran_barang.tree</field>
            <field name="model">tsi.pengeluaran_barang</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="name_karyawan" />
                    <field name="tanggal_barang_keluar" />
                    <field name="state" widget="badge" decoration-success = "state == 'done'" decoration-danger = "state == 'draft'" />
                </tree>
            </field>
        </record>

        <record id="tsi_pengeluaran_barang_view_form" model="ir.ui.view">
            <field name="name">tsi.pengeluaran_barang.form</field>
            <field name="model">tsi.pengeluaran_barang</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" readonly="1" statusbar_visible="draft,done" />
                        <button name="action_create_stock_picking" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'done')]}" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="name_karyawan" />
                            <field name="tanggal_barang_keluar" />
                        </group>
                        <notebook>
                            <page name="Pengeluaran Barang" string="Order Lines">
                                <group>
                                    <field name="lines_barang" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="quantity"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <field name="product_id"/>
                                                <field name="description"/>
                                                <field name="quantity"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

