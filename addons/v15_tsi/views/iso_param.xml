<odoo>
    <data>

        <!-- tsi.iso.standard action window -->
        <record id="tsi_iso_standard_action" model="ir.actions.act_window">
            <field name="name">Standard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tsi.iso.standard</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <!-- tsi.iso.standard tree view -->
        <record id="tsi_iso_standard_view_tree" model="ir.ui.view">
            <field name="name">tsi.iso.standard.view.tree</field>
            <field name="model">tsi.iso.standard</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="standard"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- tsi.iso.standard.filter action window -->
        <record id="iso_filter_crm" model="ir.actions.act_window">
            <field name="name">ISO</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tsi.iso.standard</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'reference': active_id}</field>
            <field name="domain">[('reference', 'in', [active_id])]</field>

        </record>

        <!-- tsi.iso.standard form view -->
        <record id="tsi_iso_standard_view_form" model="ir.ui.view">
            <field name="name">tsi.iso.standard.view.form</field>
            <field name="model">tsi.iso.standard</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                        <button name="action_archive" type="object" string="Archive" class="oe_highlight" attrs="{'invisible': [('active', '=', False)]}"/>
                        <button name="action_unarchive" type="object" string="Unarchive" attrs="{'invisible': [('active', '=', True)]}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="standard"/>
                            <field name="description"/>
                            <field name="active" invisible="1" />
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

