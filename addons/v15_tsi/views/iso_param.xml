        <function model="ir.model.fields" name="formbuilder_whitelist">
            <value>tsi.ea_code</value>
            <value eval="['name','description','iso_standard_ids']"/>
        </function>



        <!-- tsi.ea_code tree view -->
        <record id="tsi_ea_code_view_tree" model="ir.ui.view">
