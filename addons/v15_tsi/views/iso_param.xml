        <!-- tsi.mandays.auditor action window -->
        <record id="mandyas_audiotr_action" model="ir.actions.act_window">
            <field name="name">Rate Mandays Auditor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mandays.auditor</field>
