<?xml version="1.0" encoding="UTF-8"?>
<templates id="template_ext" xml:space="preserve">

    <t t-name="ButtonFormMessage" owl="1">
        <div class="container mt-3 text-start">
            <table class="table table-sm table-bordered table-striped w-50 bg-light">
                <tbody class="table-gray">
                    <tr>
                        <td class="text-end p-1">Create Application Form</td>
                        <td class="text-center p-1">
                            <button class="btn btn-primary btn-sm"
                                t-on-click="() => sendMessage('form_iso_prod')">
                                Send
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-end p-1">Request Audit</td>
                        <td class="text-center p-1">
                            <button class="btn btn-primary btn-sm"
                                t-on-click="() => sendMessage('audit_request_prod')">
                                Send
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-end p-1">Ticket Complain</td>
                        <td class="text-center p-1">
                            <button class="btn btn-primary btn-sm"
                                t-on-click="() => sendMessage('ticket_complain_prod')">
                                Send
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>

</templates>
