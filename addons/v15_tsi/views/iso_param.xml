        <!-- tsi.mandays.auditor tree view -->
        <record id="mandyas_audiotr_view_tree" model="ir.ui.view">
            <field name="name">mandays.auditor.view.tree</field>
            <field name="model">mandays.auditor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name_auditor"/>
                    <field name="auditor_ir"/>
                    <field name="auditor_er"/>
                    <field name="harga_mandays"/>
                </tree>
            </field>
        </record>

        <!-- tsi.mandays.auditor form view -->
        <record id="mandyas_audiotr_view_form" model="ir.ui.view">
            <field name="name">mandays.auditor.view.form</field>
            <field name="model">mandays.auditor</field>
            <field name="arch" type="xml">
                <form string="Rate Mandays Auditor">
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <table class="table table-sm table-bordered" style="border: 2px solid #000;">
                                    <thead>
                                        <tr>
                                            <th>Field</th>
                                            <th>Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><label for="name_auditor">Auditor Name</label></td>
                                            <td><field name="name_auditor" domain="[('department_id.name', 'in', ['OPERATION ICT', 'OPERATION XMS', 'OPERATION SUSTAINABILITY', 'Auditor Subcont'])]"/></td>
                                        </tr>
                                        <tr>
                                            <td><label for="auditor_ir">Auditor IR</label></td>
                                            <td><field name="auditor_ir"/></td>
                                        </tr>
                                        <tr>
                                            <td><label for="auditor_er">Auditor ER</label></td>
                                            <td><field name="auditor_er"/></td>
                                        </tr>
                                        <tr>
                                            <td><label for="harga_mandays">Harga Mandays</label></td>
                                            <td><field name="harga_mandays"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
