<odoo>
    <data>
        <!-- Action Request Audit Chatbot -->
        <record id="tsi_audit_request_chatbot_action" model="ir.actions.act_window">
            <field name="name">Request Audit Chatbot</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tsi.audit_request_chatbot</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->

                </p>
            </field>
        </record>

        <!--Search Request Audit Chatbot -->
        <record id="tsi_audit_request_chatbot_search" model="ir.ui.view">
			<field name="name">tsi.audit_request_chatbot.view.search</field>
			<field name="model">tsi.audit_request_chatbot</field>
			<field name="priority" eval="15"/>
			<field name="arch" type="xml">
				<search string="Audit Request Chatbot Filter">
                    <field name="partner_id"/>
				</search>
			</field>
		</record>

        <!-- View tree Request Audit Chatbot -->
        <record id="tsi_audit_request_chatbot_view_tree" model="ir.ui.view">
            <field name="name">tsi.audit_request_chatbot.view.tree</field>
            <field name="model">tsi.audit_request_chatbot</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id" />
                    <field name="no_kontrak" />
                    <field name="audit_stage"/>
                    <field name="iso_standard_ids" widget="many2many_tags" />
                    <field name="accreditation"/>
                </tree>
            </field>
        </record>

        <!--View form Request Audit Chatbot -->
        <record id="tsi_audit_request_chatbot_view_form" model="ir.ui.view">
            <field name="name">tsi.audit_request_chatbot.view.form</field>
            <field name="model">tsi.audit_request_chatbot</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="send" string="Create Audit" type="object" />
                        <!-- <button name="send" string="Create Audit" states="lanjut" type="object" /> -->

                        <!-- <field name="state" widget="statusbar" statusbar_visible="draft,approve,reject,lanjut,lost,suspend"/>
                        <field name="state_klien"/> -->
                    </header>
                    <group>
                        <field name="audit_stage" widget="radio" options="{'horizontal': true}"/>
                        <field name="partner_id"/>
                        <field name="iso_standard_ids" widget="many2many_tags"/>
                        <field name="office_address"/>
                        <field name="invoicing_address"/>
                        <field name="no_kontrak"/>

                        <!-- add new field from doc audit request crm -->
                        <field name="contact_person"/>


                        <field name="telp"/>
                        <field name="email"/>
                        <field name="website"/>
                        <field name="cellular"/>
                        <field name="scope"/>
                        <field name="boundaries"/>
                        <field name="number_site"/>
                        <field name="total_emp"/>
                        <field name="mandays"/>
                        <field name="accreditation"/>

                        <!-- add new field from doc audit request crm -->
                        <field name="project"/>
                        <field name="total_emp_project"/>
                        <field name="exp_date"/>
                        <field name="change_information"/>
                        <field name="other_notes"/>


                    </group>
                    <group>
                        <field name="is_amendment"/>
                        <field name="contract_type" attrs="{'invisible': [('is_amendment', '=', False)]}"/>
                    </group>
                    <notebook>
                        <page string="Lines Audit Request">
                            <group>
                                <field name="line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="audit_tahapan"/>
                                        <field name="tahun"/>
                                        <field name="price_lama"/>
                                        <field name="price_baru"/>
                                        <field name="up_value"/>
                                        <field name="loss_value"/>
                                        <field name="fee"/>
                                        <field name="percentage"  widget="percentage"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="audit_tahapan"/>
                                            <field name="tahun"/>
                                            <field name="price_lama"/>
                                            <field name="price_baru"/>
                                            <field name="up_value"/>
                                            <field name="loss_value"/>
                                            <field name="fee"/>
                                            <field name="percentage"  widget="percentage"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                        <page name="Reference" string="Reference">
                            <group col="4">
                                <field name="iso_reference" attrs="{'invisible': [('show_iso_fields', '=', False)]}"/>
                                <field name="review_reference" widget="many2many_tags" attrs="{'invisible': [('show_iso_fields', '=', False)]}"/>
                                <field name="ispo_reference" attrs="{'invisible': [('show_ispo_fields', '=', False)]}"/>
                                <field name="review_reference_ispo" widget="many2many_tags" attrs="{'invisible': [('show_ispo_fields', '=', False)]}"/>
                                <field name="sales_reference" />
                                <field name="show_iso_fields" invisible="1"/>
                                <field name="show_ispo_fields" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
			    </form>
            </field>
        </record>
    </data>
</odoo>